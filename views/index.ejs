     <h3>Home Page</h3>
     <br>
     <br>

     <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">

      <!-- printing all listings data coming from database -->

     <% for(let listing of allListings)
        { %>   
     <div class="card col">
      <a href="/listings/<%= listing._id %>" class="card-id">
      <img src="<%= listing.image.url %>" class="card-img" alt="card-image">
      <div class="card-body">
        <h5 class="card-title"><%= listing.title %></h5> <br>
       <b> <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %></p> </b>
           <p class="card-text"><%= listing.location %></p> 
           <p class="card-text"><%= listing.country %></p>
        
      </div>
    </a>
    </div>
    <% } %>

  </div>
     
